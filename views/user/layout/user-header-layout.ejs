<!DOCTYPE html>
<html lang="en">

<head>
	<title>Home</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="../homepage/images/icons/favicon.png" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../homepage/vendor/bootstrap/css/bootstrap.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../homepage/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../homepage/fonts/iconic/css/material-design-iconic-font.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../homepage/fonts/linearicons-v1.0.0/icon-font.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../homepage/vendor/animate/animate.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../homepage/vendor/css-hamburgers/hamburgers.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../homepage/vendor/animsition/css/animsition.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../homepage/vendor/select2/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../homepage/vendor/daterangepicker/daterangepicker.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../homepage/vendor/slick/slick.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../homepage/vendor/MagnificPopup/magnific-popup.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../homepage/vendor/perfect-scrollbar/perfect-scrollbar.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../homepage/css/util.css">
	<link rel="stylesheet" type="text/css" href="../homepage/css/main.css">
	<!--===============================================================================================-->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
</head>

<body class="animsition">

	<!-- Header -->
	<header>
		<!-- Header desktop -->
		<div class="container-menu-desktop">
			<!-- Topbar -->
			<div class="top-bar"></div>

			<div class="wrap-menu-desktop">
				<nav class="limiter-menu-desktop container">

					<!-- Logo desktop -->
					<a href="/" class="logo">
						<img src="../homepage/images/icons/bikevio.png" alt="IMG-LOGO">
					</a>

					<!-- Menu desktop -->
					<div class="menu-desktop">
						<ul class="main-menu">
							<li>
								<a href="/">Home</a>
							</li>

							<li>
								<a href="/product">Bikes</a>
							</li>
							<li>
								<a href="/profilePage">Profile</a>
							</li>

						
						</ul>
					</div>
				
					<!-- Icon header -->
					<div class="wrap-icon-header flex-w flex-r-m">
						
						<form class="form-inline my-2 my-lg-0" action="/search" method="post">
                            <input class="form-control mr-sm-2" type="text"  name="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Search</button>
                          </form>
						<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11  js-show-cart">
							<a href="/cart"> <i class="zmdi zmdi-shopping-cart"></i></a>
						</div>
						<div class="ml-4 mb-2">
							<% if(loggedIn){%>
								<a href="/account">
									<i class="bi bi-person"></i> 
								</a>
								<form action="/logout" method="post"> <button class="btn btn-primary" type="submit">LOG
										OUT</button></form>
								<%} else{%>
									<a href="/login" class="btn btn-primary">Login</a>
									<%} %>
						</div>
					</div>
				</nav>
			</div>
		</div>

		<!-- Header Mobile -->
		<div class="wrap-header-mobile">
			<!-- Logo moblie -->
			<div class="logo-mobile">
				<a href="/"><img src="../homepage/images/icons/bikevio.png" alt="IMG-LOGO"></a>
			</div>

			<!-- Icon header -->
			<div class="wrap-icon-header flex-w flex-r-m m-r-15">
				<div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 js-show-modal-search">
					<i class="zmdi zmdi-search"></i>
				</div>

				<div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10  js-show-cart"
					><a href="/cart">
					<i class="zmdi zmdi-shopping-cart"></i></a>
				</div>
			</div>

			<!-- Button show menu -->
			<div class="btn-show-menu-mobile hamburger hamburger--squeeze">
				<span class="hamburger-box">
					<span class="hamburger-inner"></span>
				</span>
			</div>
		</div>


		<!-- Menu Mobile -->
		<div class="menu-mobile">
			

			<ul class="main-menu-m">
				<li>
					<a href="/">Home</a>
				</li>

				<li>
					<a href="/product">Bikes</a>
				</li>

				<li>
					<a href="/profilePage">Profile</a>
				</li>
				<div class="ml-3 mb-2">
					<% if(loggedIn){%>
						<a href="/account">
							<i class="bi bi-person"></i> 
						</a>
						<form action="/logout" method="post"> <button class="btn btn-primary" type="submit">LOG
								OUT</button></form>
						<%} else{%>
							<a href="/login" class="btn btn-primary">Login</a>
							<%} %>
				</div>
			</ul>
			
		</div>

		<!-- Modal Search -->
		<div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
			<div class="container-search-header">
				<div class="d-flex">
					<form class="form-inline my-2 my-lg-0" action="/search" method="post">
						<input class="form-control mr-sm-2" type="text"  name="search" placeholder="Search" aria-label="Search">
						<button class="btn btn-outline-secondary my-2 my-sm-0" style="margin-left: 145px;" type="submit">Search</button>
					  </form>
				</div>
			</div>
		</div>
	</header>

	