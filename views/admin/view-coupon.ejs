<%-include('../admin/layout/admin-header-layout')-%>

<div class="container-fluid pt-4 px-4">
                
    <div class="row ">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-dark rounded h-100 p-4">
                <h6 class="mb-4">Products</h6>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Discount</th>
                            <th scope="col">Delete</th>

                        </tr>
                        
                            
                        
                    </thead>
                    <tbody>
                       <% coupons.forEach(function(coupon,index){%>
                            <tr>
                                <% console.log("ajas"+coupon) %> 
                                <th scope="row"><%=index+1%></th>
                                <td><%=coupon.name%></td>
                                <td><%=coupon.discount%></td>
                                <td>
                                    <form action="/admin/deletecoupon/<%=coupon._id%>" method="post">
                                        <button type="submit" class="btn  btn-danger" style="width: 50px;"
                                            onclick="return confirm('Are you sure you want to delete ?')"><i class="bi bi-trash-fill"></i></button>
                                    </form>
                                </td>
                            </tr>
                        <%})%>    
                      
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Table End -->

</div> 

