<%-include('../admin/layout/admin-header-layout')-%>

<div class="table-responsive">
    <h3 class="mt-3 ms-3">Users</h6>
    <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Phone</th>
        <th scope="col">Email</th>
        <th scope="col">Bike</th>
        <th scope="col">Payment</th>
        <th scope="col">Block/Unblock</th>

      </tr>
    </thead>
    <tbody>
        <% users.forEach(function(user,index){%>
            <tr>
                <th scope="row"><%=index+1 %></th>
                <td><%=user.name %></td>
                <td><%=user.phone %></td>
                <td><%=user.email %></td>
                <td></td>
                <td></td>

                <td>
                  <% if(user.block){%><form action="/admin/adminpanel/unblock/<%= user._id %> " method="post">
                    <button type="submit" class="btn btn-success" style="width: 100px;"> UnBlock</button>
                  </form>
                  <%}else{%><form action="/admin/adminpanel/block/<%= user._id %> " method="post">
                    <button type="submit" class="btn btn-danger" style="width: 100px;"> Block</button>
                  </form><%}%>  
                </td>
                
            </tr>
        <%})%>
        
    </tbody>
  </table>
  
  </div>
