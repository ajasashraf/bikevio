<%-include('../admin/layout/admin-header-layout')-%>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light rounded h-100 p-4">
                <h4 class="mb-4">Edit product</h4>
                <form method="post" action="/admin/editproduct/<%=products._id%>" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label text-dark">Bike name</label>
                        <input type="text" class="form-control" id="exampleInputEmail1"
                            aria-describedby="emailHelp" name="name" value="<%=products.bikeName%>">

                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label text-dark">Category</label>
                        <select name="category" id="" class="group input-group form-control bg-dark">
                        <option value="" disabled selected><%=products.category.name%></option>    
                        <% categories.forEach(function(categories,index){%>
                            <option value="<%=categories._id%>">
                                <%=categories.name%>
                            </option>
                            <%})%>
                        </select>  
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label text-dark">Price</label>
                        <input type="number" class="form-control " id="exampleInputPassword1" name="price" value="<%=products.price%>">
                    </div>

                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label text-dark">description</label>
                        <input type="text" class="form-control" id="" name="description" value="<%=products.description%>">
                    </div>
                    <div class="form-group">
                        <img src="/assets/images/thumbnails/<%=products.imageUrl[0]%>" alt="" style="width: 300px ; height: 160px ;">
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-dark">Thumbnail</label>
                        <input type="file" class="form-control bg-dark" id="" name="imageUrl"  multiple>
                    </div>
                    

                    
                    <!-- <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div> -->
                    <button type="submit" class="btn btn-primary">Update</button>
                
                </form>
            </div>
        </div>
    </div>
 </div>

