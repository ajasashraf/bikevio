<%-include('../admin/layout/admin-header-layout')-%>

<div class="container-fluid pt-4 px-4">
                
    <div class="row ">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-dark rounded h-100 p-4">
                <h6 class="mb-4">Products</h6>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Category</th>
                            <th scope="col">Price</th>
                            <!-- <th scope="col">description</th>
                            <th scope="col">Videos</th> -->
                            <th scope="col">Image</th>
                            <th scope="col">Dlt/Edit</th>

                        </tr>    
                    </thead>
                    <tbody>
                       <% products.forEach(function(products,index){%>
                            <tr>
                                <th scope="row"><%=index+1%></th>
                                <td><%=products.bikeName%></td>
                                <td><%=products.category.name%></td>
                                <td><%=products.price%></td>
                                <td><img src='/assets/images/thumbnails/<%=products.imageUrl[0]%>' alt="" style="height: 50px; width: 60px;"></td>
                                <td><a class="btn btn-dark" href="/admin/editproduct/<%=products._id%>" role="button" style="width: 50px;"><i class="bi bi-pen-fill"></i></a> <br><br>
                                    <form action="/admin/deleteproduct/<%=products._id%>" method="post">
                                        <button type="submit" class="btn  btn-danger" style="width: 50px;"
                                            onclick="return confirm('Are you sure you want to delete ?')"><i class="bi bi-trash-fill"></i></button>
                                    </form>
                                </td>
                                <!-- <td></td>
                                <td></td> -->   
                            </tr>
                        <%})%>    
                      
                    </tbody>
                </table>
            </div>
        </div>


    </div>
</div>
<!-- Table End -->

</div> 

