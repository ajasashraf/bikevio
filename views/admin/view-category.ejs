    </div>
 </div>
             <!-- Table Start -->
             <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-12">
                        <div class="bg-dark rounded h-100 p-4">
                            <h5 class="mb-4">Brands</h5>
                            <table class="table">
                                <thead>
                                    <tr>
                                   
                                        <th scope="col">#</th>
                                        <th scope="col">Name</th>

                                        <th scope="col">Delete</th>
                                      
                                    </tr>
                                </thead>
                                <tbody>
                                    <% categories.forEach(function(categories,index){%>
                                        <tr>
                                           
                                                <td><%=index+1%></td>
                                                <td><%=categories.name%></td>
                                                <td><form action="/admin/deletecategory/<%=categories._id%>" method="post">
                                                    <button type="submit" class="btn btn-danger" style="width: 80px;"
                                                onclick="return confirm('Are you sure you want to delete ?')">Delete</button>
                                                </form></td>    
                                        </tr>
                                    <%})%>
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>


                </div>
            </div>           
            <!-- Table End -->
